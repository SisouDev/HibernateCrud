<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="hibernate" transaction-type="RESOURCE_LOCAL">
        <class>org.hibernate.model.User</class>
        <class>org.hibernate.model.Product</class>
        <class>org.hibernate.model.Order</class>
        <class>org.hibernate.model.Addresses</class>
        <!-- Configuração do banco de dados -->
        <properties>
            <!-- URL de conexão com o banco -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/hibernate?user=root"/>
            <!-- Driver JDBC -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <!-- Usuário do banco de dados -->
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <!-- Senha do banco de dados -->
            <property name="jakarta.persistence.jdbc.password" value="root"/>
            <!-- Dialeto do Hibernate para o MySQL -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <!-- Mostrar SQL no console -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>